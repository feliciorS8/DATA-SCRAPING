#membuat folder
import os
def create_directory(scrapping):
    if not os.path.exists(scrapping):
        os.makedirs(scrapping)
        
create_directory('scrapping')

#membuat file baru
def create_new_file(path):
    f = open(path,'w')
    f.write("")
    f.close()

create_new_file('scrapping/file.txt')

#menulis file
def write_to_file(path, data): #scrpping/test.txt
    with open(path, 'a') as file:
        f.write(data + '\n')

write_to_file('scrapping/file.txt', '0')

#menghapus file
def clear_file(path):
            f= open(path, 'w')
            f.close()
            
clear_file('scrapping/file.txt')
#validasi ex file
import os
def does_file_exist(path):
    return os.path.isfile(path)
print(does_file_exist('scrapping/file.txt'))

#membaca file
def read_file(path):
    with open(path, 'r') as file:
        for line in file:
            print(line)            
read_file('scrapping/file.txt') 
#remove file
def remove_file(path):
    if does_file_exist(path):
        os.remove(path)
    else:
        print("File tidak ada")
        
remove_file('scrapping/file.txt')
